<div class="container">

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %>
  <%= f.label :details %>
  <%= f.text_field :details, required: true %>
  <% unless f.object.new_record? %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
